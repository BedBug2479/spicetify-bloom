{
  "name": "bloom",
  "private": true,
  "scripts": {
    "build-script": "spicetify-creator --out=%appdata%/spicetify/themes/bloom --in=src/script",
    "build-script-local": "spicetify-creator --minify --out=dist --in=src/script",
    "watch-script": "spicetify-creator --watch --out=%appdata%/spicetify/themes/bloom --in=src/script",
    "build-styles": "sass src/styles/main.scss %appdata%/spicetify/themes/bloom/user.css --no-source-map",
    "build-styles-local": "sass src/styles/main.scss dist/user.css --no-source-map --style compressed",
    "watch-styles": "sass src/styles/main.scss %appdata%/spicetify/themes/bloom/user.css --no-source-map --watch",
    "copy-colors": "copyfiles --flat src/color.ini %appdata%/spicetify/themes/bloom",
    "watch-colors": "onchange src/color.ini -- npm run copy-colors",
    "build-theme": "npm run build-script && npm run build-styles && npm run copy-colors",
    "build-theme-local": "npm run build-script-local && npm run build-styles-local",
    "watch-theme": "npm run watch-script && npm run watch-styles && npm run watch-colors",
    "update-types": "curl -s -o src/script/types/spicetify.d.ts https://raw.githubusercontent.com/spicetify/spicetify-cli/master/globals.d.ts"
  },
  "devDependencies": {
    "@types/react": "^18.2.14",
    "@types/react-dom": "^18.2.6",
    "@typescript-eslint/eslint-plugin": "^5.61.0",
    "@typescript-eslint/parser": "^5.61.0",
    "copyfiles": "^2.4.1",
    "eslint": "^8.44.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-import-resolver-typescript": "^3.6.0",
    "eslint-plugin-import": "^2.28.0",
    "eslint-plugin-react": "^7.33.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "onchange": "^7.1.0",
    "postcss": "^8.4.27",
    "prettier": "^3.0.0",
    "sass": "^1.64.2",
    "spicetify-creator": "^1.0.14",
    "stylelint": "^15.10.2",
    "stylelint-config-rational-order": "^0.1.2",
    "stylelint-config-sass-guidelines": "^10.0.0",
    "stylelint-order": "^6.0.3",
    "typescript": "^5.1.6"
  },
  "dependencies": {
    "fast-average-color": "^9.3.0",
    "gsap": "^3.12.2",
    "spcr-settings": "^1.2.0"
  }
}
